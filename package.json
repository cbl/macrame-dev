{
    "private": true,
    "scripts": {
        "clone": "npm run clone-admin && npm run clone-macrame && npm run clone-macrame-laravel",
        "clone-admin": "git clone https://github.com/macramejs/admin packages/admin",
        "clone-macrame": "git clone https://github.com/macramejs/macrame packages/macrame",
        "clone-macrame-laravel": "git clone https://github.com/macramejs/macrame-laravel packages/macrame-laravel",
        "watch-vue3": "mix watch --mix-config vue3.webpack.mix.js",
        "watch-react": "mix watch --mix-config react.webpack.mix.js",
        "watch-poll-vue3": "mix watch -- --watch-options-poll=1000 --mix-config vue3.webpack.mix.js",
        "watch-poll-react": "mix watch -- --watch-options-poll=1000 --mix-config react.webpack.mix.js",
        "hot-vue3": "mix watch --hot --mix-config vue3.webpack.mix.js",
        "hot-react": "mix watch --hot --mix-config react.webpack.mix.js",
        "prod-vue3": "npm run production-vue3",
        "prod-react": "npm run production-react",
        "production-vue3": "mix --production --mix-config vue3.webpack.mix.js",
        "production-react": "mix --production --mix-config react.webpack.mix.js"
    },
    "devDependencies": {
        "@babel/preset-react": "^7.14.5",
        "axios": "^0.21",
        "laravel-mix": "^6.0.6",
        "lodash": "^4.17.19",
        "postcss": "^8.1.14",
        "ts-loader": "^9.2.3",
        "typescript": "^4.3.4"
    },
    "dependencies": {
        "@headlessui/react": "^1.3.0",
        "@headlessui/vue": "^1.3.0",
        "@inertiajs/inertia": "^0.9.2",
        "@inertiajs/inertia-react": "^0.6.2",
        "@inertiajs/inertia-vue3": "^0.4.7",
        "@inertiajs/progress": "^0.2.5",
        "@macramejs/admin-config": "file:packages/admin/packages/admin-config",
        "@macramejs/admin-react": "file:packages/admin/packages/admin-react",
        "@macramejs/admin-vue3": "file:packages/admin/packages/admin-vue3",
        "@macramejs/macrame": "file:packages/macrame/packages/macrame",
        "@macramejs/macrame-react": "file:packages/macrame/packages/macrame-react",
        "@macramejs/macrame-vue3": "file:packages/macrame/packages/macrame-vue3",
        "@vue/compiler-sfc": "^3.1.1",
        "classnames": "^2.3.1",
        "lodash.merge": "^4.6.2",
        "lodash.xor": "^4.5.0",
